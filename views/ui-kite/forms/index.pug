	body
		section(class="c-forms")
			div(class="c-form--medium-wrapper")
				div(class="c-form")
					div(class="c-form__header c-form--sign-up")
						a(href="#", class="c-form__header-link") Already registered?
						h2(class="c-form__title c-form__title--big") Sign up
					form(class="c-form__main")
						div(class="input-wrapper")
							input(type="email", placeholder="E-mail or login", class="c-form__input")
							div(class="mail-icon")
						div(class="input-wrapper")
							input(type="password", placeholder="Password", class="c-form__input")
							div(class="lock-icon")
						a(href="#", class="c-form__main-link") Forgot password?
						div(class="button-wrapper c-form--sign-up")
							button(class="c-button c--button-rounded c-form--sign-up") Sign up
					div(class="c-form__footer")
						span(class="c-form__footer-text") Or
						a(href="#", class="c-form__social-link c--facebook") Login via Facebook
						a(href="#", class="c-form__social-link c--twitter") Login via Twitter
			div(class="c-form--medium-wrapper")
				div(class="c-form")
					div(class="c-form__header c-form--sign-in")
						a(href="#", class="c-form__header-link") Create an account
						h2(class="c-form__title c-form__title--big") Sign in
					form(class="c-form__main")
						div(class="input-wrapper")
							input(type="email", placeholder="E-mail or login", class="c-form__input")
							div(class="mail-icon")
						div(class="input-wrapper")
							input(type="password", placeholder="Password", class="c-form__input")
							div(class="lock-icon")
						div(class="c-check c-form__checkbox")
							input(name="check-btn", type="checkbox", value="on", id="check-btn--big-form", checked)
							label(for="check-btn--big-form") Remember password?
						div(class="button-wrapper c-form--sign-in")
							button(class="c-button c--button-rounded c-form--sign-in") Sign in
					div(class="c-form__footer")
						span(class="c-form__footer-text") Or
						a(href="#", class="c-form__social-link c--facebook") Login via Facebook
						a(href="#", class="c-form__social-link c--twitter") Login via Twitter

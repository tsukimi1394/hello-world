			div(class="c-form--full-wrapper")
				div(class="c-form c-form--payment")
					div
						h2(class="c-form__title") Payment method
						div
							div
								label(for="credit-card") Credit card
								div
									input(type="tel", name="credit-card", id="credit-card", maxlength="4", placeholder="6594")
								div
									input(type="tel", name="credit-card", maxlength="4", placeholder="6594")
								div
									input(type="tel", name="credit-card", maxlength="4", placeholder="6594")
								div
									input(type="tel", name="credit-card", maxlength="4", placeholder="6594")
							div
								label(for="cardholder-name") Cardholder name
								div
									input(type="text", name="cardholder-name", id="cardholder-name")
							div
								label(for="expire-date") Expire date
								div
									select(name="expire-date", id="expire-date")

						h2(class="c-form__title") Sign in
					div(class="c-form__main")
						div(class="input-wrapper c-form__main--small")
							input(type="email", placeholder="E-mail or login", class="c-form__input c-form__main--small")
							div(class="mail-icon")
						div(class="input-wrapper c-form__main--small")
							input(type="password", placeholder="Password", class="c-form__input c-form__main--small")
							div(class="lock-icon")

			div(class="c-form--small-wrapper")
				div(class="c-form c-form--reset")
					div(class="c-form__header")
						h2(class="c-form__title") Reset password
						a(href="#") Sign in
					div(class="c-form__main")
						div
							input(type="email", placeholder="E-mail or login")
							div(class="mail-icon")
						div(class="button-wrapper")
							button Sign up
				div(class="c-form c-form--subscribe")
					h2(class="c-form__title") Subscribing
					span We will never send you spam or some other trash
					div
						div
							input(type="email", placeholder="E-mail")
							div(class="mail-icon")
						div(class="button-wrapper")
							button пр
		section(class="c-forms")
			div(class="c-form--big-wrapper")
				div(class="c-form c-form--big-contact")
					div(class="c-form__header")
						h2(class="c-form__title") Contact
					div(class="c-form__main")
						div
							label(for="name--big-contact") Name
							input(type="text", placeholder="Carlos Shorter", name="name--big-contact", id="name--big-contact")
						div
							label(for="email--big-contact") E-mail
							input(type="email", placeholder="shotercarlos@gmail.com", name="email--big-contact", id="email--big-contact")
						div
							label(for="subject--big-contact") Subject
							input(type="text", placeholder="Partnership", name="subject--big-contact", id="subject--big-contact")
						div
							label(for="budget--big-contact") Select budget
							select(name="budget--big-contact", id="budget--big-contact")
								option less than $5.000
								option $5.000 - $10.000
								option(selected) $10.000 - $15.000
								option $15.000 - $20.000
								option more than $20.000
						div
							label(for="message--big-contact") Message
							textarea(name="message--big-contact", id="message--big-contact")
						div(class="c-check")
							input(name="check-btn", type="checkbox", value="on", id="check-btn--on", checked)
							label(for="check-btn--on") Send me a copy
						div(class="button-wrapper")
							button Send
			div(class="c-form--small-wrapper")
				div(class="c-form c-form--small-contact")
					div(class="c-form__header")
						h2(class="c-form__title") Contact
					div(class="c-form__main")
						div
							label(for="name--big-contact") Name
							input(type="text", placeholder="Carlos Shorter", name="name--big-contact", id="name--big-contact")
						div
							label(for="email--big-contact") E-mail
							input(type="email", placeholder="shotercarlos@gmail.com", name="email--big-contact", id="email--big-contact")
						div
							label(for="message--big-contact") Message
							textarea(name="message--big-contact", id="message--big-contact")
						div(class="button-wrapper")
							button Send
		section(class="c-forms")
			div(class="c-form--full-wrapper")
				div(class="c-form c-form--cart")
					div(class="c-form__header")
						h2(class="c-form__title") Cart
					div(class="c-form__main")
						table
							tr
								th Item
								th Price
								th Quantity
								th Total
							tr
								td
									div
										img(alt="leather bag")
									div
										span Leather bag
								td $199
								td 
									div
									span 1
									div
								td $199
							tr
								td
									div
										img(alt="leather belt")
									div
										span Leather belt
										div
											span Color: 
											input(type="radio", name="color-belt", id="belt-color1", checked)
											label(for="color1")
											input(type="radio", name="color-belt", id="belt-color2")
											label(for="color2")
											input(type="radio", name="color-belt", id="belt-color3")
											label(for="color3")
											input(type="radio", name="color-belt", id="belt-color4")
											label(for="color4")
											input(type="radio", name="color-belt", id="belt-color5")
											label(for="color5")
								td $49
								td 
									div
									span 2
									div
								td $98
							tr
								td
									div
										img(alt="leather shoes")
									div
										span Leather shoes
										div
											div
												span Color:
												input(type="radio", name="color-shoes", id="shoes-color1", checked)
												label(for="shoes-color1")
												input(type="radio", name="color-shoes", id="shoes-color2")
												label(for="shoes-color2")
											div
												span Size:
												span 42
								td $199
								td 
									div
									span 1
									div
								td $199
						div
							span Subtotal:
							span $496
					div(class="c-form__footer")
						a(href="#") Continue shopping
						div(class="button-wrapper")
							button 
								span Order
		section(class="c-forms")
			div(class="c-form--full-wrapper")
				div(class="c-form c-form--address")
					div
						h2(class="c-form__title") Shipping address
						div
							label(for="country--address") Select country
							select(name="country--address", id="country--address")
								option(selected) USA
								option Canada
								option Mexica
						div
							label(for="state--address") State, region, province
							input(type="text", placeholder="California", name="state--address", id="state--address")
						div
							label(for="address1--address") Address 1
							input(type="text", name="address1--address", id="address1--address")
						div
							label(for="city--address") Select city
							select(name="city--address", id="city--address")
								option(selected) California
								option Washington
								option NY
						div
							label(for="zip--address") ZIP code
							input(type="text", placeholder="95661", name="zip--address", id="zip--address")
						div
							label(for="address2--address") Address 2
							input(type="text", name="address2--address", id="address2--address")
					div
						h2(class="c-form__title") Contact info
						div
							div
								label(for="name--address") Full Name
								input(type="text", placeholder="California", name="name--address", id="name--address")
							div
								label(for="email--address") E-mail
								input(type="email", placeholder="95661", name="email--address", id="email--address")
							div
								label(for="phone--address") Phone
								input(type="tel", placeholder="California", name="phone--address", id="phone--address")
					div(class="c-form__footer") 
						a(href="#") Return to Cart
						div(class="button-wrapper")
							button
								span Payment method

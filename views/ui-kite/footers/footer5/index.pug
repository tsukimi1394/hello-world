doctype html
html(lang="en")
	head
		title= "Footer 5"
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		link(href="https://fonts.googleapis.com/css?family=Cabin:600", rel="stylesheet")
		link(rel="stylesheet", type= "text/css", href="css/style.css")
	body
		section(class="c-footer")
			div(class="c-footer__subscribe")
				form(class="c-footer__subscribe-wrapper")
					label(for="subscribe", class="c-footer__subscribe-label") Subscribe our newsletters
					div(class="c-footer__subscribe-input-wrapper")
						input(type="text", name="subscribe", id="subscribe", placeholder="Your e-mail here" class="c-footer__subscribe-input")
					div(class="mail-icon c-footer__subscribe-mail-icon")
					input(type="submit", value="Subscribe", class="c-footer__subscribe-submit")
			div(class="c-footer__main")
				div(class="c-footer__main-logo")
					img(src="images/logo.png", alt="logo", class="c-footer__main-logo-img")
				nav(class="c-footer__main-menu-item")
					a(href="#", class="c-footer__main-menu-subitem") Services
					a(href="#", class="c-footer__main-menu-subitem") Branding
					a(href="#", class="c-footer__main-menu-subitem") UX Design
					a(href="#", class="c-footer__main-menu-subitem") Prototype
					a(href="#", class="c-footer__main-menu-subitem") UI Design
					a(href="#", class="c-footer__main-menu-subitem") Development
				div(class="c-footer__main-map")
					img(src="images/map.jpg", alt="map", class="c-footer__main-map-img")
				div(class="c-footer__main-copyright")
					span(class="c-footer__main-copyright-copy") UI8 &copy 2010-2014
					a(href="tel: (415) 496-9612", class="c-footer__main-copyright-contact") (415) 496-9612
					span(class="c-footer__main-copyright-contact") 920 Reserve Dr. Suite 140
					span(class="c-footer__main-copyright-contact") Roseville, CA 95678
					div(class="button-wrapper c-footer__main-copyright-button")
						button(class="c-button c--button-rounded c-footer__main-copyright-button c--button-small") Email Us
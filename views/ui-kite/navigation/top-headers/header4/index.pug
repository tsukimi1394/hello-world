		link(rel="stylesheet", type= "text/css", href="../../../../../css/templates/ui-kit/navigation/top-headers/header4/style.css")
	body
		section(class="c-nav")
			div(class="c-nav-left")
				button(class="c-button c--button-square c--button-rounded c--button-small c-nav__button c-menu-icon")
						div(class="c-button-square-icon c--button-small c-nav__button")
				nav(class="c-menu")
					a(href="#", class="c-menu__item is-active") Products
					a(href="#", class="c-menu__item") Prices
					a(href="#", class="c-menu__item") About us
					a(href="#", class="c-menu__item") Contacts
				form(class="search-wrapper c-nav__search") 
					input(type="search", placeholder="Search", class="c-search c-search--round c-search--small c-nav__search")
					div(class="search-icon c-search--small c-nav__search-icon")
			div(class="c-nav-right")
				a(href="tel: 1-800-555-6478", class="c-nav__tel") 1-800-555-6478
				div(class="button-wrapper c-nav__button")
					button(class="c-button c--button-rounded c--button-small c-nav__button c-nav__button--first-color") Sign in
				div(class="button-wrapper c-nav__button")
					button(class="c-button c--button-rounded c--button-small c-nav__button c-nav__button--second-color") Sign up
